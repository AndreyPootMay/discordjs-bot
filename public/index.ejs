<%- include ('partials/_header'); %>

<div class="row" style="margin-right: 0px;">
    <form action="/add" method="post">
        <div class="col-xs-12 col-md-4 col-sm-4">
            <div id="yesterday-form">
                <div class="card-body">
                    <h5 class="card-title">Yesterday</h5>
                    <p class="card-text">Write here what you did yesterday.</p>
                    <div class="col-xs-12">
                        <button type="button" id="add-yesterday" class="btn btn-success btn-xs" @click="addRow"><i
                                class="fa fa-plus"></i></button>
                        <hr>
                        <div class="row" v-for="row in rows">
                            <div class="col-md-4 col-xs-12 col-sm-12 form-group">
                                <input type="text" class="form-control" :name="'yesterday[' + row.index + '][title]'"
                                    placeholder="Project" v-model="row.project">
                            </div>
                            <div class="col-md-6 col-xs-12 col-sm-12 form-group">
                                <textarea class="form-control" :name="'yesterday[' + row.index + '][activity]'"
                                    placeholder="Type the activities" id="activity" v-model="row.activity" cols="70"
                                    rows="10"></textarea>
                            </div>
                            <div class="col-md-2 col-xs-12 col-sm-12 form-group">
                                <button type="button" class="btn btn-danger" @click="deleteRow(row)">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </div>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-4 col-sm-4">
            <div id="today-form">
                <div class="card-body">
                    <h5 class="card-title">Today</h5>
                    <p class="card-text">Write here what you doing today.</p>
                    <div class="col-xs-12">
                        <button type="button" id="add-today" class="btn btn-success btn-xs" @click="addRow"><i
                                class="fa fa-plus"></i></button>
                        <hr>
                        <div class="row" v-for="row in rows">
                            <div class="col-md-4 col-xs-12 col-sm-12 form-group">
                                <input type="text" class="form-control" :name="'today[' + row.index + '][title]'"
                                    placeholder="Project" v-model="row.project">
                            </div>
                            <div class="col-md-6 col-xs-12 col-sm-12 form-group">
                                <textarea class="form-control" :name="'today[' + row.index + '][activity]'"
                                    placeholder="Type the activities" id="activity" v-model="row.activity" cols="70"
                                    rows="10"></textarea>
                            </div>
                            <div class="col-md-2 col-xs-12 col-sm-12 form-group">
                                <button type="button" class="btn btn-danger" @click="deleteRow(row)">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </div>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-4 col-sm-4">
            <div id="blocked-form">
                <div class="card-body">
                    <h5 class="card-title">Blocked</h5>
                    <p class="card-text">Write here where are you blocked right-now.</p>
                    <div class="col-xs-12">
                        <button type="button" id="add-blocked" class="btn btn-success btn-xs" @click="addRow"><i
                                class="fa fa-plus"></i></button>
                        <hr>
                        <div class="row" v-for="row in rows">
                            <div class="col-md-4 col-xs-12 col-sm-12 form-group">
                                <input type="text" class="form-control" :name="'blocked[' + row.index + '][title]'"
                                    placeholder="Project" v-model="row.project">
                            </div>
                            <div class="col-md-6 col-xs-12 col-sm-12 form-group">
                                <textarea class="form-control" :name="'blocked[' + row.index + '][activity]'"
                                    placeholder="Type where are you blocked from" id="activity" v-model="row.activity" cols="70"
                                    rows="10"></textarea>
                            </div>
                            <div class="col-md-2 col-xs-12 col-sm-12 form-group">
                                <button type="button" class="btn btn-danger" @click="deleteRow(row)">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </div>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <button type="submit" id="form-submit" class="btn btn-primary">
                    <i class="fa fa-send"></i> Send
                </button>
            </div>
        </div>
    </form>
</div>

<%- include ('partials/_footer'); %>